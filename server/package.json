{
  "name": "chat-server",
  "author": "Nikita Karapuzov <karapuzov.nikita@gmail.com>",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^15.6.1",
    "@types/pg": "^8.6.1",
    "bcryptjs": "^2.4.3",
    "eslint-plugin-import": "^2.23.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "sequelize": "^6.6.5",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0"
  },
  "scripts": {
    "start": "npm run clear && nodemon --watch src",
    "build": "tsc",
    "clear": "rm -rf dist || true && mkdir -p dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color --config .eslintrc.json",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx src --color --config .eslintrc.json",
    "lint:types": "tsc --noEmit",
    "prettify": "prettier --write '**/*.{ts,tsx,js,jsx,scss,css,json}'"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --config .eslintrc.json"
    ],
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
